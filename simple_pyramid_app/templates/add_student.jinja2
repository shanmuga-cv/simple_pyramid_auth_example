{% extends "base.jinja2" %}
{% block title %} simple pyramid app : All students {% endblock %}
{% block body %}
<form method="POST">
<table border=1>
  <tr> <th> Name </th> <td> <input type=text name="student_name"> </td> </tr>
  <tr> <th> Gender </th> <td> <input type=radio name="student_gender" value="M"> Male <input type=radio name="student_gender" value="F">  Female </td> </tr>
  <tr> <th> Password </th> <td> <input type=text name="pwd" > </td> </tr>
  <tr> <td colspan=2> <input type="submit" value="submit"> </td> </tr>
</table>
</form>
{% endblock %}
